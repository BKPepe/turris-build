++	unsigned long val;
++	int ret;
++
++	ret = kstrtoul(buf, 0, &val);
++	if (ret < 0)
++		return ret;
++
++	if (val > 0xff)
++		return -ERANGE;
++
++	ret = moxtet_device_write(dev, val);
