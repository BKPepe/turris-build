From 245599741791a730643547e81ba13e1488ae0669 Mon Sep 17 00:00:00 2001
From: Josef Schlehofer <pepe.schlehofer@gmail.com>
Date: Wed, 9 Feb 2022 00:01:13 +0100
Subject: [PATCH] turris-netboot: gen_initramfs_list.sh was renamed to
 gen_initramfs.sh

This is the upstream change in Linux Kernel Build repository.
Refer: https://git.kernel.org/pub/scm/linux/kernel/git/stable/linux.git/commit/usr/Makefile?h=v5.10.74&id=80e715a06c2d0a24dbb818bb1dba2ef0f20d7068
---
 utils/turris-netboot/Makefile | 4 ++--
 1 file changed, 2 insertions(+), 2 deletions(-)

diff --git a/utils/turris-netboot/Makefile b/utils/turris-netboot/Makefile
index f86808779..f5f7aec57 100644
--- a/utils/turris-netboot/Makefile
+++ b/utils/turris-netboot/Makefile
@@ -9,7 +9,7 @@ include $(TOPDIR)/rules.mk
 
 PKG_NAME:=turris-netboot
 PKG_VERSION:=0.6.2
-PKG_RELEASE:=2
+PKG_RELEASE:=3
 
 PKG_SOURCE_PROTO:=git
 PKG_SOURCE_VERSION:=v$(PKG_VERSION)
@@ -85,7 +85,7 @@ endef
 
 define Package/turris-netboot-data/install
 	$(INSTALL_DIR) $(1)/usr/share/turris-netboot
-	cd $(LINUX_DIR); ./usr/gen_initramfs_list.sh \
+	cd $(LINUX_DIR); ./usr/gen_initramfs.sh \
 	-o $(1)/usr/share/turris-netboot/initrd-$(CONFIG_ARCH).gz -u squash -g squash \
 	"$(PKG_BUILD_DIR)/rootfs" "$(PKG_BUILD_DIR)/rootfs.extra"
 	gzip -d $(1)/usr/share/turris-netboot/initrd-$(CONFIG_ARCH).gz
-- 
